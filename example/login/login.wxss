/* index.wxss */
page {  
  background-color:  rgba(77, 178, 208, 0.8);  
  
}  

.loginDiv {
  background-color: white;
  
  margin-left:  10%;
  margin-right: 10%;
}

.loginButton {
  font-size: 1.7em;
  color: white;
  background-color: rgba(210, 88, 63, 0.9);
  margin-top: 10%;
}

.logoDiv {
  margin-top: 30%;
  margin-bottom: 50px;
  padding-top: 20px;
}

.logo {
   text-align: center;
   width: 60%;
   margin: auto;
   display: block;
}

.bottomDiv {
  text-align: center;
  font-size: 14px;
  font-weight: normal;
  color: white;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 5%;
  margin-bottom: 10px;
}

.login {
  position: relative;
  top: 50%;
  width: 250px;
  display: table;
  margin: -150px auto 0 auto;
  background: #fff;
  border-radius: 4px;
}
.legend {
  position: relative;
  width: 100%;
  display: block;
  background: #FF7052;
  padding: 15px;
  color: #fff;
  font-size: 20px;
}
.legend:after {
  content: "";
  background-image: url(http://simpleicon.com/wp-content/uploads/multy-user.png);
  background-size: 100px 100px;
  background-repeat: no-repeat;
  background-position: 152px -16px;
  opacity: 0.06;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
}
.input {
  position: relative;
  width: 90%;
  margin: auto;
  margin-top: 10px;
  
}
.input span {
  position: absolute;
  display: block;
  color: #d4d4d4;
  left: 10px;
  top: 8px;
  font-size: 20px; 
}
.input input {
  padding: 10px 5px 10px 40px;
  display: block;
  border: 2px solid rgba(77, 178, 208, 0.8);  
  border-radius: 4px;
  transition: 0.2s ease-out;
  color: #a1a1a1;
}
.input input:focus {
  padding: 10px 5px 10px 10px;
  outline: 0;
  border-color: #FF7052;
}

.page__bd {
  padding-bottom: 14px;
}
